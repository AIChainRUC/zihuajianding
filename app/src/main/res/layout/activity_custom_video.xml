        <!--android:layout_height="50dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:onClick="stopRecord"-->
        <!--android:src="@mipmap/control_pause"-->
        <!--android:visibility="gone" />-->



    </RelativeLayout>

</RelativeLayout>